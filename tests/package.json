{
  "name": "app-scaffold-api-tests",
  "version": "1.0.0",
  "description": "JavaScript tests for the app-scaffold server API using Jest",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:health": "jest --testNamePattern='Health Endpoint'",
    "test:config": "jest --testNamePattern='Config Endpoint'",
    "test:increment": "jest --testNamePattern='Increment Endpoint'",
    "test:cors": "jest --testNamePattern='CORS Headers'",
    "test:error": "jest --testNamePattern='Error Handling'",
    "test:performance": "jest --testNamePattern='Performance'"
  },
  "keywords": [
    "api",
    "tests",
    "javascript",
    "server",
    "jest"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "testTimeout": 1e4
  },
  "dependencies": {
    "hyli": "^0.4.1",
    "hyli-check-secret": "^0.4.1",
    "hyli-wallet": "^0.3.7"
  }
}
